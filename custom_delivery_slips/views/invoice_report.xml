            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <style>
                @font-face {
                font-family: 'Tajawal-Black';
                src: local('Tajawal'), local('Tajawal'), url(/custom_delivery_slips/static/src/fonts/Tajawal-Black.ttf)
                format('opentype');
                }
                @font-face {
                font-family: 'Tajawal-Bold';
                src: local('Tajawal'), local('Tajawal'), url(/custom_delivery_slips/static/src/fonts/Tajawal-Bold.ttf)
                format('opentype');
                }
                @font-face {
                font-family: 'Tajawal-ExtraBold';
                src: local('Tajawal'), local('Tajawal'),
                url(/custom_delivery_slips/static/src/fonts/Tajawal-ExtraBold.ttf) format('opentype');
                }
                @font-face {
                font-family: 'ExtraLigh';
                src: local('Tajawal'), local('Tajawal'),
                url(/custom_delivery_slips/static/src/fonts/Tajawal-ExtraLigh.ttf) format('opentype');
                }
                @font-face {
                font-family: 'Tajawal-Light';
                src: local('Tajawal'), local('Tajawal'), url(/custom_delivery_slips/static/src/fonts/Tajawal-Light.ttf)
                format('opentype');
                }
                @font-face {
                font-family: 'Tajawal-Medium';
                src: local('Tajawal'), local('Tajawal'), url(/custom_delivery_slips/static/src/fonts/Tajawal-Medium.ttf)
                format('opentype');
                }
                @font-face {
                font-family: 'Tajawal-Regular';
                src: local('Tajawal'), local('Tajawal'),
                url(/custom_delivery_slips/static/src/fonts/Tajawal-Regular.ttf) format('opentype');
                }
                .regular{
                font-family: Tajawal-Regular;
                }
                .black{
                font-family: Tajawal-Black !important;
                /*font-weight: bold;*/
                }
                .light{
                font-family: Tajawal-Light;
                }
                .address_block span{
                line-height: initial !important;
                }
                .table-border {
                    border: 1px solid !important;
                }
                table{
                    margin-bottom: 3px !important;
                }
                .product_block td{
                    border-right: 1px solid;
                    border-left: 1px solid;

                    border-top: 0px !important;
                    <!-- padding: 5px 0px 5px 0px !important; -->
                }
                .table tr td{
                        padding: 0.2rem 0.2rem !important;
                }
            </style>
